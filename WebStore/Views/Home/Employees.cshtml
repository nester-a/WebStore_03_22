@model IEnumerable<WebStore.Models.Employee>
@{
    ViewData["Title"] = "Список сотрудников";
}

<h3>Employees</h3>
<hr/>

<table>
    <thead>
        <tr>
            <th>#</th>
            <th>Фамилия</th>
            <th>Имя</th>
            <th>Отчество</th>
            <th>Возраст</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var employee in Model)
        {
            <tr>
                <td>
                    <a href="/home/details/@employee.Id">@employee.Id</a>
                </td>
                <td>@employee.LastName</td>
                <td>@employee.FirstName</td>
                <td>@employee.Patronymic</td>
                <td>@employee.Age</td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a href="/">Домой</a>
</p>

