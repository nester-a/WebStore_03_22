@model IEnumerable<WebStore.Models.Employee>
@{
    ViewData["Title"] = "Список сотрудников";
}

<div class="container">
    <h3>Employees</h3>
<hr/>

<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Фамилия</th>
            <th>Имя</th>
            <th>Отчество</th>
            <th>Возраст</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.LastName</td>
                <td>@employee.FirstName</td>
                <td>@employee.Patronymic</td>
                <td>@employee.Age</td>
                <td>
                    <a asp-controller="Employees" asp-action="Details" asp-route-id="@employee.Id">
                        <i class="fa fa-info"/>
                    </a>
                </td>
                <td>
                    <a asp-controller="Employees" asp-action="Edit" asp-route-id="@employee.Id">edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a asp-controller="Home" asp-action="Index" class="btn btn-default">Домой</a>
</p>
</div>

