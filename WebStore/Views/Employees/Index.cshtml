@model IEnumerable<WebStore.Models.Employee>
@{
    ViewData["Title"] = "Список сотрудников";
}

<div class="container">
    <h3>Employees</h3>
<hr/>

<p>
    <a asp-controller="Employees" asp-action="Create" class="btn btn-default">
        Создать1
    </a>
</p>
<p>
    <a asp-controller="Employees" asp-action="Edit" class="btn btn-default">
        Создать2
    </a>
</p>

    @if (Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Фамилия</th>
                    <th>Имя</th>
                    <th>Отчество</th>
                    <th>Возраст</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var employee in Model)
                {
                    <tr>
                        <td>@employee.Id</td>
                        <td>@employee.LastName</td>
                        <td>@employee.FirstName</td>
                        <td>@employee.Patronymic</td>
                        <td>@employee.Age</td>
                        <td>
                            <a asp-controller="Employees" asp-action="Details" asp-route-id="@employee.Id">
                                <i class="fa fa-info"/>
                            </a>
                        </td>
                        <td>
                            <a asp-controller="Employees" asp-action="Edit" asp-route-id="@employee.Id">Edit</a>
                        </td>
                        <td>
                            <a asp-controller="Employees" asp-action="Delete" asp-route-id="@employee.Id" class="text-danger">Delete</a>
                        </td>
                        <td>
                            <form asp-action="DeleteConfirmed" asp-route-id="@employee.Id">
                                <input type="submit" value="Delete" class="btn btn-danger" />
                            </form>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>
            Сотрудников нет
        </p>
    }


<p>
    <a asp-controller="Home" asp-action="Index" class="btn btn-default">Домой</a>
</p>
</div>

